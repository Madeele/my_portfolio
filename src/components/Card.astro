---
export interface Props {
  title: string;
  body: string;
  href: string;
  group: string;
  tags: Array<string>;
}

const { href, title, body, group, tags } = Astro.props;
---

<li class="xl:w-[550px] w-[300px] min-w-96 flex z-20 border border-[#554236]">
  <a href={href} class="flex w-full h-full group">
    <div class="w-full flex flex-col justify-between divide-y divide-[#554236]">
      <div
        class="p-4 gap-2 flex flex-col group-hover:bg-[#939650] group-hover:text-white transition duration-300">
        <div class="flex flex-row w-full justify-between items-start">
          <h2 class="text-2xl w-3/5 font-bold">
            {title}
          </h2>
          <p class="w-fit h-fit flex text-[#947a6d] group-hover:text-white">
            {group}
          </p>
        </div>
        <p>
          {body}
        </p>
      </div>
      <div
        class="flex flex-row flex-wrap space-x-2 justify-self-end text-[#947a6d] px-4 text-sm">
        {tags.map((tag) => <p class="py-2">{tag}</p>)}
      </div>
    </div>
  </a>
</li>

<style></style>
