<style>
  .h1 {
    @apply text-6xl flex flex-col;
  }
  .h2 {
    font-size: 40px;
  }
</style>

<script>
  document.getElementById("menu-button")?.addEventListener("click", openMenu);
  document.getElementById("menu-close")?.addEventListener("click", closeMenu);

  const buttons = document.querySelectorAll("[close-menu-button]");

  buttons.forEach((button) => {
    button.addEventListener("click", () => closeMenu());
  });

  function openMenu() {
    let open = document.getElementById("burger-menu") as HTMLElement;

    if ((open.style.display = "none")) {
      open.style.display = "flex";
    } else {
      open.style.display = "none";
    }
  }

  function closeMenu() {
    let close = document.getElementById("burger-menu") as HTMLElement;
    if ((close.style.display = "flex")) {
      close.style.display = "none";
    } else {
      close.style.display = "flex";
    }
  }
</script>
